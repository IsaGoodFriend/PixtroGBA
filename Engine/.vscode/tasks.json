{
    "version": "2.0.0",
    "tasks": [
        { 
            "label": "stop emulation",
            "type":"shell",
            "windows": {
                "command":"taskkill /im EmuHawk.exe /F"
            }
        },
        {
            "label": "make debug",
            "type": "process",
            "command": "C:/devkitPro/tools/bin/pixtroCompiler.exe",
            "args": ["DEBUG=1"],
            "problemMatcher": []
        },
        {
            "label": "make release",
            "type": "process",
            "command": "C:/devkitPro/tools/bin/pixtroCompiler.exe",
            "args": ["DEBUG=0"],
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean"
        },
        {
            "label": "gdb-debug",
            "type": "shell",
            "dependsOn": ["make debug"],
            "isBackground": false,
            "windows": {
                "command": "C:/Users/IsaGoodFriend/Downloads/BizHawk-2.5.0/EmuHawk.exe -g ${workspaceFolder}/${workspaceFolderBasename}.gba;sleep 5;echo debuggerReady"
            },
            "presentation": {
                "clear": true,
                "reveal": "always",
                "panel": "new"
            },
            "command": "debuggerReady"
        },
        {
            "label": "run",
            "type": "shell",
            "isBackground": true,
            "command": "C:/NO$GBADebugger/NO$GBA.exe  ${workspaceFolder}/${workspaceFolderBasename}.elf",
            "problemMatcher": []
        }
    ]
}